<div data-show-target="item" class="visibility-hidden">
  <%= link_to({ controller: 'receives', platform_id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'message' %>
    <span class="ml-1"><%= t('.receives.index.title') %></span>
  <% end %>
  <%= link_to({ controller: 'platform_templates', platform_id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'paperclip' %>
    <span class="ml-1"><%= t('.platform_templates.index.title') %></span>
  <% end %>
  <%= button_to({ action: 'agency', id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'pencil' %>
    <span class="ml-1"><%= t('.agency.title') %></span>
  <% end %>
  <%= button_to({ action: 'info', id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'gears' %>
    <span class="ml-1"><%= t('.info.title') %></span>
  <% end %>
</div>
<div data-show-target="item" class="visibility-hidden">
  <%= link_to({ controller: 'agencies', platform_id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'door-open' %>
    <span class="ml-1"><%= t('.agencies.index.title') %></span>
  <% end %>
  <%= link_to({ controller: 'program_agencies', platform_id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'door-open' %>
    <span class="ml-1"><%= t('.program_agencies.index.title') %></span>
  <% end %>
  <%= link_to model.auth_url, target: '_blank', class: 'button is-small is-borderless' do %>
    <%= svg_tag 'vial' %>
    <span class="ml-1">测试授权</span>
  <% end if model.auth_url %>
</div>
